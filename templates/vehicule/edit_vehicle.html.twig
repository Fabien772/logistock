{% extends 'base.html.twig' %}


{% block title %}modif vehicle
{% endblock %}


{% block body %}
	<div class="container">
		<div class="row">
			<div class="col">
				<h2>Modifier le véhicule</h2>
			</div>
			<div class="col"></div>
			<div class="col"></div>
		</div>

		{{ form_start(form) }}
		<div class="row p-3 mb-2 bg-secondary bg-gradient text-white rounded-3">


			<div class="col-md-6">{{form_row(form.marque)}}</div>
			<div class="col-md-6">{{form_row(form.immat)}}</div>
			<div class="col-md-6">{{form_row(form.modele)}}</div>

			<div class="col-md-6">{{form_row(form.dateAcquisition)}}</div>
			<div class="col-md-6">{{form_row(form.equipementPolice)}}</div>
			<div class="col-md-6">{{form_row(form.pret)}}</div>


			<div class="col-md-6">{{form_row(form.attribution)}}</div>
			<div class="col-md-6">{{form_row(form.situation)}}</div>
			<div class="col-md-6">{{form_row(form.numeroPlace)}}</div>
			<div class="col-md-6">{{form_row(form.comment)}}</div>
			<div class="col-md-6">{{form_row(form.dateCT)}}</div>


		</div>

		<div class="row mb-2">
			<button type="submit" class="btn btn-outline-success">Enregistrer les modifications</button>
		</div>
		<div class="row">
			<a class="btn btn-outline-danger" type="link" href="{{path('vehicle_confirm_delete',{'id':vehicle.id})}}">Supprimer le véhicule</a>

		
		</div>
		{{ form_end(form) }}

	</div>


{% endblock %}


