{% extends 'base.html.twig' %}


{% block title %}create visa_card
{% endblock %}


{% block body %}
    <div class="main-content-accueil">

        <div class="container">

            <div class="row">
                <div class="col"></div>
                <div class="col"></div>
                <div class="col"></div>
            </div>

            {{ form_start(form) }}
            <div class="row  row-custom-bg p-3 mb-2 bg-gradient  text-white rounded-3">


                <div class="col-md-6">{{ form_row(form.identifiant) }}</div>
                <div class="col-md-6">{{ form_row(form.name) }}</div>
                <div class="col-md-6">{{ form_row(form.alias) }}</div>
                <div class="col-md-6">{{ form_row(form.immatriculation) }}</div>


                <div class="col-md-6">{{ form_row(form.DateAttrib) }}</div>
                <div class="col-md-6">{{ form_row(form.dateActivate) }}</div>
                <div class="col-md-6">{{ form_row(form.archivingDate) }}</div>
                <div class="col-md-6">{{ form_row(form.comment) }}</div>
                <div class="col-md-6">{{ form_row(form.actived) }}</div>

            </div>


            <div class="row ">
                <div class="col">
                    <button type="submit" class="btn-pulse-modify w-100 alert alert-info">Enregistrer</button>
                </div>
                <div class="col">
                    <button onclick="window.location.href='{{ path('app_visa_cards') }}'"
                            class="col btn-pulse-delete  col  alert alert-danger w-100">Annuler
                    </button>
                </div>


            </div>
            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}
