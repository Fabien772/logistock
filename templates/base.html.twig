<!doctype html>
<html lang="en" data-bs-theme="auto">
	<head>
		<meta charset="utf-8">

		<title>Logistock</title>

		{% block stylesheets %}{% endblock %}

		<link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet">
		<link href="{{ asset('assets/css/custom.css') }}" rel="stylesheet">

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">


	</head>

	<body>

		<!-- Nav -->

		<div class="container-fluid">
			<div class="row fixed-top">

				<header>
					<div class="row">
						<div class="col-4 text-start">
						{% if page_name is not defined %}
							<a class="text-decoration-none text-white" href="{{path('app_index')}}"><img src="{{ asset('icons/undo.svg') }}" alt="Icône + " width="40" height="20"></a>
						{% endif %}
						</div>
						<div class="col-4 logo" onclick="window.location.href='{{path('app_index')}}'">LOGISTOCK</div>
						<div class="col-4">
							{% for message in app.flashes('message') %}

								<div class=" alert-success font-custom-alert " role="alert">
									{{ message }}
								</div>

							{% endfor %}

						</div>
					</div>


					<div class="row">
						<div class="col ">
							{%if titre is defined %}
								<h7 class="border border-light pt-2 pb-2 ps-3 pe-3 rounded-pill">{{titre}}</h7>
							{% endif %}
						</div>

						<div class="col text-center tagline">Gestion intégrée de matériel</div>


						<div class="col ">
							{% if vehicle_create is defined %}
								<h7 class="btn-pulse-create border border-light rounded-pill p-2 ">
									<a class="text-decoration-none text-white" href="{{path('app_create_vehicle')}}">Ajouter un véhicule<img src="{{ asset('icons/plus.svg') }}" alt="Icône + " width="40" height="20"></a>
								</h7>
							{% endif %}

						</div>


					</header>

				</div>
			</div>


			{% block body %}{% endblock %}


			<!-- FOOTER -->

			<div class="container-fluid fixed-bottom">
				<div class="row ">
					<footer>
						<div>© 2017–2025 Company, Inc. • Confidentialité • Conditions</div>
						<a href="#" class="back-to-top">Retour en haut
							<i class="fas fa-arrow-up"></i>
						</a>
					</footer>
				</div>
			</div>


			{% block javascripts %}{% endblock %}
			<script src="{{ asset('assets/js/bootstrap.bundle.min.js') }}"></script>
			<script src="{{ asset('assets/js/global.js') }}"></script>
			{# <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
			<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/locales/bootstrap-datepicker.fr.min.js"></script> #}
		</html>
	</body>
</html>
